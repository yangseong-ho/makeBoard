<html>

<head>
  <% include ../common/head.ejs %>
</head>


<body>
    <% include ../common/header.ejs %>

    <div class="is-col-xs2">
        <% include ../common/left_side.ejs %>
    </div>

    <div class="buttons">
        <a class="btn btn-default" href="/posts">Back</a>
    </div>

    
    <div class="is-col-xs8">
    <div class="contentBox">
        <h3 class="contentBoxTop"><%= post.title %></h3>
        <div class="row">
          <div class="col-sm-4 col-sm-push-8">
            <div class="post-info">
              <div><span>Author</span> : <%= post.nickname ? post.nickname : "" %></div>
              <div><span>Created</span> : <%= post.created_at %></div>
              <% if(post.updated_at) { %>
                <div><span>Updated</span> : <%= post.updated_at %></div>
              <% } %>
            </div> <!-- post-info end -->
          </div> <!-- col end-->
          <div class="col-sm-8 col-sm-pull-4">
            <div class="post-body"><%= post.content %></div>
          </div> <!-- col end-->
        </div> <!-- row end -->
    </div> <!-- post-container end -->
    </div>

    <div class="is-col-xs2">
        <% include ../common/right_side.ejs %>
    </div>

    <% include ../common/footer.ejs %>
</body>

</html>